.bulletScreen
  width 100%
  position relative
  .content
    overflow hidden
    width 100%
    height 350px
    margin 0 auto
    margin-top 20px
    li
      z-index 9999
      display inline-block
      float left
      padding 5px 25px
      font-weight bold
      font-size 14px
      list-style-type none
      background-color rgba(0,0,0,0.5);
      height 30px
      border-radius 25px
      line-height 30px
      color rgb(255,255,255)
      letter-spacing 1px
      position fixed
      right -130px
  .set-style-hidden
    display none
    position fixed
    right 0
    bottom 45px
    height 150px
    width 100%
    background-color #2d312f
    opacity 0.8
    border-style solid
    text-align center
    font-size 18px
    color #f3f3f3
  .set-style
    position fixed
    right 0
    bottom 45px
    height 150px
    width 100%
    background-color #2d312f
    opacity 0.8
    border-style solid
    text-align center
    font-size 18px
    color #f3f3f3
    .set-color
      width 50%
      height 100%
      float left
      margin-top 5px
      padding-right 5px
      border-right 1px solid #f3f3f3
    .set-size
      width 48%
      float right
      margin-top 5px
  .footer
    height 45px
    //background-color #2d312f
    background-color #f2f2f2
    opacity 0.8
    position fixed
    bottom 0
    width 100%
    input
      width 55%
      padding 0 20px
      border-radius 20px
      border-style none
      height 38px
      margin-top 1%
      margin-left 10px
      outline none
      float left
      font-size 14px
    .push
      height 33px
      width 16%
      background #55acee
      color: #ffffff
      margin-top 1.5%
      margin-left 5px
      float left
      letter-spacing 1px
      border none
      border-radius 5px
      outline none
    .set
      color #222222
      margin-top 2%
      margin-right 2%
      float right

